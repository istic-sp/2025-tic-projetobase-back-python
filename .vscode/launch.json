    "version": "1.5.1",
    "configurations": [
        {
            "name": "Debuger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/fast_api/app", // Alterar nome da aplicação para "${workspaceFolder}/<nome_da_aplicação>/app", caso necessário
            "env": {
                "PYTHONPATH": "${workspaceFolder}fast_api/app/src"
            },
            "jinja": false
        }
    ]
}